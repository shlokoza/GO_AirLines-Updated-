
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<hr>

<p>
    <form action = "http://localhost:3000/flightDetails" method="GET" class="form-inline" >
        <div class="form-group">
            <input type="text" name="search" placeholder="Search the location..." class = "form-control">
            <input type="submit" value="Search" class = "btn btn-default">
        </div>
    </form>
</p>
<br>

<div id = "flights" class="table-wrapper-scroll-y my-custom-scrollbar">
<table class = "table table-dark table-bordered table-striped mb-0" border = "1">
    <thead>
        <tr>
            <th scope="col">Destination</th>
            <th scope="col">Departure Date</th>
            <th scope="col">Arrival Date</th>
            <th scope="col">Departure Time</th>
            <th scope="col">Arrival Time</th>
            <th scope="col">Flight Duration</th>
            <th scope="col">Price (CAD)</th>        
            <th scope="col">Seats</th>
        </tr>

        
        
        {{#each flights}}
            <tr>
                
                <tbody id = "tbody">
                <td scope='row' class = 'td'>{{location}}</td>
                <td scope='row' class = 'td'>{{Ddate}}</td>
                <td scope='row' class = 'td'>{{Adate}}</td>
                <td scope='row' class = 'td'>{{Dtime}}</td>
                <td scope='row' class = 'td'>{{Atime}}</td>
                <td scope='row' class = 'td'>{{hours}}</td>
                <td scope='row' class = 'td'>${{price}}</td>
                <td scope='row' class = 'td'><a href="#" class = "myHref" rel = "{{_id }}">{{seat}}</a></td>
                </tbody>

            </tr>  
            {{/each}}

    </thead>
    
</table>
</div>


<br>
<hr>
<br>
<h2>Your Selected Flight Details!</h2>
<br>
<label for = "location">Destination:</label>&nbsp;<span id = "location"></span><br>
<label for = "Ddate">Departure Date:</label>&nbsp;<span id = "Ddate"></span><br>
<label for = "Adate">Arrival Date:</label>&nbsp;<span id = "Adate"></span><br>
<label for = "hours">Flight Duration:</label>&nbsp;<span id = "hours"></span><br>
<label for = "price">Price:</label><span id = "price"></span><br>

<hr>


<div class="card mx-auto" style="width: 100rem;">
  <div class="card-body">
    <h2 class="card-title">Personal Infromation</h2><br>
        <div class = 'col-xs-4'>
        <label for = "Fname">First Name:</label>
        <input type = "text" class = "form-control" id = "Fname" required>
        </div>

        <div class = 'col-xs-4'>
        <label for = "Lname">Last Name:</label>
        <input type = "text" class = "form-control" id = "Lname" required>
        </div>

         <div class = 'col-xs-4'>
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" placeholder="name@example.com" required><br>
        </div>
        <h2>Payment information</h2><br>
        <form role = "form">
                    <div class = "form-group">
                        <label for = "cardNumber">Card Number:</label>

                        <div class = "input-group col-xs-4">
                            <input type = "text" class = "form-control" id = "cardNumber" placeholder="Valid Card Number" minlength="16" maxlength="16" required>

                            <span class = "input-group-addon">
                                <span class = "glyphicon glyphicon-lock"></span>
                            </span>
                        </div>
                        
                        <br>

                        <div class = "row">
                            <div class = "col-xs-4 col-md-4">
                                <label for = "expiryMonth">Expiry Date:</label><br>

                                <div class = "col-xs-6 col-lg-6 pl-ziro">
                                    <input type = "text" class = "form-control" id = "expiryMonth" placeholder="MM/YY" minlength="2" maxlength="4" required>
                                </div>
                            </div>

                            <div class = "col-xs-5 col-md-5 pull-right">
                                <div class = "form-group">
                                    <label for = "cvCode">CVV:</label>
                                    <input type="password" class = "form-control" id = "cvCode" placeholder="CVV" minlength="3" maxlength="3" required><br>
                                </div>
                            </div>

                            <button class = "btn btn-success btn-lg btn-block" onclick="payDone()" role="button">Pay</a>
                        </div>

                    </div>
                </form>

  </div>




</div>

